{
  "name": "bingobanko",
  "private": true,
  "version": "0.0.3",
  "type": "module",
  "engines": {
    "node": "^24.13.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "npm run type-check && vite build",
    "type-check": "vue-tsc --noEmit -p tsconfig.app.json && tsc --noEmit -p tsconfig.node.json",
    "deploy:worker": "BASE_PATH=/ npm run build && wrangler deploy --config wrangler.jsonc",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@hugeicons/core-free-icons": "^3.1.1",
    "@hugeicons/vue": "^1.0.4",
    "vue": "^3.5.26",
    "vue-i18n": "^11.2.8"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20260213.0",
    "@eslint/js": "^10.0.1",
    "@tsconfig/node24": "^24.0.4",
    "@types/node": "^24.10.13",
    "@vitejs/plugin-vue": "^6.0.4",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/ui": "^4.0.17",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.8.1",
    "eslint": "^9.39.2",
    "eslint-plugin-vue": "^10.7.0",
    "globals": "^17.3.0",
    "happy-dom": "^20.6.1",
    "jiti": "^2.6.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.55.0",
    "vite": "^7.3.1",
    "vitest": "^4.0.17",
    "vue-tsc": "^3.2.4",
    "wrangler": "^4.65.0"
  }
}
